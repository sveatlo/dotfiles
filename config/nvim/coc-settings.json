{
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "json",
        "javascriptreact",
        "typescript.tsx",
        "graphql",
        "go",
        "rust"
    ],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true,
                "completeUnimported": true
            }
        }
    },
    "python.condaPath": "conda",
    "python.sortImports.path": "isort",
    "rust.all_features": true,
    "rust.clippy_preference": "on"
}

